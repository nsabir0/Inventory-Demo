<!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnu_cancel_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    fancy:fb_defaultColor="@color/button_close"
                    fancy:fb_focusColor="@color/button_close"
                    fancy:fb_text="Close"/>

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnu_save_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    fancy:fb_defaultColor="@color/button_normal"
                    fancy:fb_focusColor="@color/button_pressed"
                    fancy:fb_text="Update"/>

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnu_delete_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    fancy:fb_defaultColor="@color/button_clear"
                    fancy:fb_focusColor="@color/button_clear"
                    fancy:fb_text="Delete"/>

            </LinearLayout>

        </TableLayout>

    </LinearLayout>

</ScrollView>


</LinearLayout>
