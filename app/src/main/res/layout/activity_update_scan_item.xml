<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    fancy:fb_defaultColor="@color/button_close"-->
<!--                    fancy:fb_focusColor="@color/button_close"-->
<!--                    fancy:fb_text="Close"/>-->

<!--                <TextView-->
<!--                    android:layout_width="10dp"-->
<!--                    android:layout_height="match_parent"/>-->

